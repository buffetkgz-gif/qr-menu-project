// Prisma Schema для локальной разработки (SQLite)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// Пользователи (владельцы ресторанов)
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  phone     String?
  isAdmin   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  restaurant Restaurant?

  @@map("users")
}

// Рестораны
model Restaurant {
  id          String   @id @default(uuid())
  name        String
  subdomain   String   @unique
  address     String?
  phone       String?
  description String?
  
  // Социальные сети
  instagram   String?
  facebook    String?
  whatsapp    String?
  
  // Настройки доставки
  deliveryEnabled Boolean @default(false)
  deliveryFee     Float?
  minOrderAmount  Float?
  
  // Валюта
  currency    String   @default("₽")
  
  // Стиль отображения карточек меню
  menuCardStyle String @default("horizontal") // horizontal или vertical
  
  // Баннеры (массив URL) - в SQLite используем JSON строку
  banners     String   @default("[]")
  
  // Связь с пользователем
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Подписка
  subscription Subscription?
  
  // Меню
  categories  Category[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("restaurants")
}

// Подписки
model Subscription {
  id            String   @id @default(uuid())
  plan          String   // TRIAL, MONTHLY, YEARLY
  status        String   @default("TRIAL") // TRIAL, ACTIVE, EXPIRED, CANCELLED
  trialEndsAt   DateTime?
  currentPeriodStart DateTime
  currentPeriodEnd   DateTime
  
  restaurantId  String       @unique
  restaurant    Restaurant   @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  @@map("subscriptions")
}

// Категории меню
model Category {
  id          String   @id @default(uuid())
  name        String
  description String?
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  
  restaurantId String
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  
  dishes      Dish[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("categories")
}

// Блюда
model Dish {
  id          String   @id @default(uuid())
  name        String
  description String?
  price       Float
  image       String?
  isActive    Boolean  @default(true)
  order       Int      @default(0)
  
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  
  modifiers   Modifier[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("dishes")
}

// Модификаторы (добавки, размеры и т.д.)
model Modifier {
  id          String   @id @default(uuid())
  name        String
  price       Float    @default(0)
  isRequired  Boolean  @default(false)
  order       Int      @default(0)
  
  dishId      String
  dish        Dish     @relation(fields: [dishId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("modifiers")
}